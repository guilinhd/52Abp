@model List<UserRoleViewModel>
@{
    ViewData["Title"] = "设置用户角色信息";
}

<form method="post" asp-action="role">
    <input type="text" value="@ViewBag.Id" name="Id" hidden />
    <div class="card">
        <div class="card-header">
            <h2>设置用户角色信息</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input asp-for="@Model[i].Id" hidden />
                    <input asp-for="@Model[i].Name" hidden />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label asp-for="@Model[i].IsSelected" class="form-check-label">@Model[i].Name</label>
                </div>
            }
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">更新</button>
            <a asp-action="Edit" class="btn btn-primary" asp-route-id="@ViewBag.Id">返回</a>
        </div>
    </div>
</form>

