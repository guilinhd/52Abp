@model RoleUpdateViewModel
@{
    ViewData["Title"] = "修改角色信息";
}

<h1>修改角色信息</h1>
<form method="post" asp-action="edit" asp-controller="admin" class="mt-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" class="form-control" readonly />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name"></span>
        </div>
    </div>
    <div class="card">
        <div class="card-header">
            <h3>在此角色中添加或删除用户</h3>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Users.Count; i++)
            {
                <div class="form-check m-1">
                    <input asp-for="@Model.Users[i].Id" hidden />
                    <input asp-for="@Model.Users[i].Name" hidden />
                    <input asp-for="@Model.Users[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model.Users[i].IsSelected">
                        @Model.Users[i].Name
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <button class="btn btn-primary" type="submit">更新</button>
            <a asp-action="Index" asp-controller="Admin" class="btn btn-primary">返回</a>
        </div>
    </div>
</form>
