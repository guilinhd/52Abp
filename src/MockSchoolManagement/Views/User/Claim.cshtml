@model UserClaimViewModel
@{
    ViewData["Title"] = "设置用户所有权";
}

<form method="post" asp-action="Claim">
    <input asp-for="Id" hidden />
    <div class="card">
        <div class="card-header">
            <h2>设置用户所有权信息</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Claims.Count; i++)
            {
                <div class="form-check m-1">
                    <input asp-for="@Model.Claims[i].Name" hidden />
                    <input asp-for="@Model.Claims[i].IsSelected" class="form-check-input" />
                    <label asp-for="@Model.Claims[i].IsSelected" class="form-check-label">@Model.Claims[i].Name</label>
                </div>
            }
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">更新</button>
            <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.Id">返回</a>
        </div>
    </div>
</form>

