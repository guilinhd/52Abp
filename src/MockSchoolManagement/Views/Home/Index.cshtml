@model IEnumerable<Student>

@{
    ViewData["Title"] = "学生详细信息";
    string photoPath = "";
}

<div class="card-deck">
    @foreach (var student in Model)
    {
        photoPath = "~/images/" + (student.PhotoPath ?? "noimage.png");
        <div class="card m-3">
            <div class="card-header">
                <h1>@student.Name</h1>
            </div>
            <div class="card-body text-center">
                <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true" />
                <h4>主修科目:@student.Major.GetDisplayName()</h4>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="Details" asp-route-id="@student.Id" class="btn btn-primary">查看</a>
                <a asp-controller="Home" asp-action="Edit" asp-route-id="@student.Id" class="btn btn-primary">修改</a>
                <a href="#" class="btn btn-danger">删除</a>
            </div>
        </div>
    }
</div>


